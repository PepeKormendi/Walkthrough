<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="helloDialog"
        title="Hello {/recipient/name}"
    >
        <content>
            <core:Icon
                id="helloworldicon"
                src="sap-icon://hello-world"
                size="8rem"
                class="sapUiMediumMargin"
            />
        </content>
        <beginButton>
            <Button
                id="hellopanlebuttonOk"
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
